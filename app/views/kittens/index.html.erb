<h1>All Kittens</h1>

<ul>
    <% @kittens.each do |kitten| %>
        <div>
            <li><%= kitten.name %></li>
            <li><%= kitten.age %></li>
            <li><%= kitten.cuteness %></li>
            <li><%= kitten.softness %></li>
            <%= link_to 'Delete Kitten', kitten_path(kitten), method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
    <% end %>
</ul>

<%= link_to "Create Kitten", new_kitten_path(@kitten) %>
